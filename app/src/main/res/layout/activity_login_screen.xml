<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.uvigo.learnfordown.learnfordown.login_screen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/colorPrimary">

            <ImageButton
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:src="@mipmap/icon_backarrow"
                android:background="@color/colorPrimary"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:visibility="visible"
                android:scaleType="fitCenter" />

            <TextView
                android:text="REGÃSTRATE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:paddingTop="25dp"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="60sp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif" />


            <ImageButton
                android:src="@mipmap/ic_home"
                android:layout_width="102dp"
                android:layout_height="130dp"
                android:id="@+id/button9"
                android:onClick="goHome"
                android:layout_weight="0.03"
                android:scaleType="fitCenter"
                android:background="@color/colorPrimary" />

            <ImageButton
                android:src="@mipmap/icon_help"
                android:layout_width="102dp"
                android:layout_height="130dp"
                android:id="@+id/button4"
                android:layout_weight="0.03"
                android:scaleType="fitCenter"
                android:background="@color/colorPrimary" />


        </LinearLayout>

        <TextView
            android:text="NOMBRE"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="45sp"
            android:onClick="textNombreUp"
            android:paddingLeft="100sp"
            android:textAlignment="viewStart"
            android:layout_weight="0.15" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350sp"

            > </EditText>

        <TextView
            android:text="EDAD"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:paddingLeft="100sp"

            android:background="@android:color/white"
            android:onClick="textEdadUp"

            android:textSize="45sp"
            android:textAlignment="viewStart"
            android:layout_weight="0.15" />

        <EditText
            android:id="@+id/editTextEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350sp"

            ></EditText>

        <RelativeLayout
            android:layout_width="1282dp"
            android:layout_height="136dp"
            android:layout_weight="0.14"
            android:layout_marginTop="50sp">

            <Button
                android:text="Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_marginLeft="550sp"
                android:layout_marginTop="50sp"
                android:padding="50px"
             />
        </RelativeLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
